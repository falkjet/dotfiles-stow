{
    "macros": {
        "terminalExecLast": [
            "workbench.action.terminal.focus",
            {
                "command": "workbench.action.terminal.sendSequence",
                "args": { "text": "!!\n" }
            }
        ]
    },
    "terminal.integrated.allowChords": false,
    "terminal.integrated.commandsToSkipShell": [
        "macros.terminalExecLast",
        "-workbench.action.quickOpen"
    ],
    "editor.fontFamily": "JetBrainsMono Nerd Font",
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
    "npm.exclude": [
        "**/xpacks/**"
    ],
    "git.confirmSync": false,
    "workbench.colorTheme": "One Dark Darker",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "foreground": "#ffcc00",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "constant",
                "settings": {
                    "foreground": "#ff0000"
                }
            }
        ]
    },
    "haskell.manageHLS": "GHCup",
    "editor.rulers": [80],
    "rewrap.autoWrap.enabled": true,
    "emmet.includeLanguages": {
        "javascript": "html",
        "php": "html",
        "twig": "html",
        "liquid": "html",
        "vue": "html",
        "nunjucks": "html",
        "markdown": "html",
        "django-html": "html",
        "erb": "html",
        "html.erb": "html"
    },
    "[ruby]": {
        "editor.tabSize": 2,
    },
    "explorer.autoReveal": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "editor.minimap.enabled": false,
    "[typescriptreact][javascriptreact][typescript][javascript][vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 2,
    },
    "omnisharp.useModernNet": false,
    "csharp.inlayHints.parameters.enabled": false,
    "csharp.inlayHints.types.enabled": false,
    "csharp.referencesCodeLens.enabled": false,
    "[csharp]": {
        "editor.formatOnSave": true
    },
    "vim.leader": "<space>",
    "vim.normalModeKeyBindings": [
        {
            "before": ["K"],
            "commands": ["editor.action.showHover"],
            "silent": "true"
        },
        {
            "before": ["<leader>", "f"],
            "commands": ["workbench.action.quickOpen"],
            "silent": "true"
        },
        {
            "before": [","],
            "commands": ["removeSecondaryCursors"]
        },
        {
            "before": ["<leader>", "a"],
            "commands": ["editor.action.quickFix"]
        },
        {
            "before": ["]", "d"],
            "command": "editor.action.marker.next"
        },
        {
            "before": ["[", "d"],
            "command": "editor.action.marker.prev"
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [","],
            "commands": ["removeSecondaryCursors"],
            "after": ["<Esc>"]
        }
    ],
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-w>": false,
        "<C-d>": false,
        "<C-f>": false
    },
    "[java]": {
        "editor.inlayHints.enabled": "off",
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "window.titleBarStyle": "custom",
}
